{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",  // Add this
    "types": ["node", "express"] // Add this
  },
  "include": [
    "backend/**/*"  // Fix the include syntax
  ],
  "exclude": [
    "node_modules"  // Fix the exclude syntax
  ]
}